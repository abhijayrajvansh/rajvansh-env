{
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "workbench.iconTheme": "bearded-icons",
  "liveServer.settings.donotShowInfoMsg": true,
  "prettier.endOfLine": "auto",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "extensions.ignoreRecommendations": true,
  "editor.fontFamily": "SF Mono, JetBrains Mono, SF Mone, Martian Mono, Monaco, Menlo, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.stickyScroll.enabled": false,
  "editor.lineHeight": 1.6,
  "editor.fontWeight": "500",
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.enabled": true,

  // github copilot
  // "github.copilot.chat.codeGeneration.instructions": [
  //   {
  //   }
  // ],

  "terminal.integrated.fontFamily": "SF Mono",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.cursorStyle": "block",
  // "terminal.integrated.tabs.enabled": false,
  // "terminal.integrated.env.osx": {},
  // "workbench.colorCustomizations": {
  //   "terminal.background": "#00000000"
  // },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.titleBarStyle": "custom",
  "apc.electron": {
    "transparent": true,
    // Range: 0-1 (To go fully transparent, set it to 0)
    "opacity": 1,
    "vibrancy": "appearance-based",
    "visualEffectState": "active"
  },
  "update.mode": "manual",
  "editor.guides.indentation": true,
  "editor.smoothScrolling": true,
  "prisma.showPrismaDataPlatformNotification": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.branchRandomName.enable": true,
  "git.confirmSync": false,
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],
  "claude.lang": "en",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.statusBar.visible": false,
  "workbench.colorTheme": "Best Themes - Github Black"
}
